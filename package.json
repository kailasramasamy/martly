{
  "name": "martly",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "db:generate": "pnpm --filter @martly/api exec prisma generate",
    "db:migrate": "pnpm --filter @martly/api exec prisma migrate dev",
    "db:studio": "pnpm --filter @martly/api exec prisma studio",
    "db:seed": "pnpm --filter @martly/api exec prisma db seed",
    "db:seed-catalog": "pnpm --filter @martly/api run seed:catalog",
    "db:seed-master-catalog": "pnpm --filter @martly/api run seed:master-catalog",
    "db:seed-collections": "pnpm --filter @martly/api run seed:collections"
  },
  "devDependencies": {
    "turbo": "^2",
    "typescript": "^5.7",
    "eslint": "^9",
    "@eslint/js": "^9",
    "typescript-eslint": "^8",
    "prettier": "^3"
  },
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma"
    ]
  }
}
